<odoo>
    <record id="view_product_outlet_quick_form" model="ir.ui.view">
        <field name="name">product.template.outlet.quick.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Quick Product Entry" create="true" edit="true">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image_1920"/>
                        <field name="list_price"/>
                        <field name="categ_id"/>
                        <field name="type" widget="selection" invisible="1"/>
                        <field name="website_published"/>
                        <field name="is_outlet_item" invisible="1"/>
                    </group>
                    <group>
                        <field name="description_sale"/>
                        <field name="default_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
